# Database Configuration (from Railway PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database

# Or individual values:
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rac_inventory
DB_USER=postgres
DB_PASSWORD=your_password

# Server Configuration
PORT=3000
NODE_ENV=development
TZ=Australia/Darwin
# Email Configuration (Outlook/Office 365)
# Note: Each operator uses their own Outlook credentials from login session
# No need to configure SMTP_USER, SMTP_PASS, or SMTP_FROM here
SMTP_HOST=smtp.office365.com
SMTP_PORT=587